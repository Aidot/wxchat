.log-list {
  display: flex;
  flex-direction: row;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}
.red {
  color: red;
  text-decoration: underline;
}
.msg {
  line-height: 1.5;
  font-size: 24rpx;
  margin: 6rpx 0;
}
.info {
  color: gray;
}
.chat {
  font-size: 28rpx;
}
.nick {
  color: blue;
  font-size: 24rpx;
  text-decoration: underline;
}
.me .nick {
  color: green;
}
.msg-content {
  margin-top: 78rpx;
  padding: 0 5%;
}
.msg-list {
  line-height: 1.5;
  font-size: 24rpx;
}
.msg-input {
  position: fixed;
  width: 90%;
  padding: 0 5%;
  z-index: 99;
  top: 0;
  display: flex;
  flex-direction: row;
}
.msg-input textarea {
  width: 70%;
  border: 1rpx solid #ddd;
  font-size: 24rpx;
  min-height: 18rpx;
  border-radius: 9rpx;
  padding: 12rpx;
}
.msg-input button {
  width: 20%;
}